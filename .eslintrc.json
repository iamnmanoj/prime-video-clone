{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2021
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ], // Enforce semicolons at the end of statements
        "quotes": [
            "error",
            "double"
        ], // Enforce double quotes for strings
        "indent": [
            "error",
            2
        ], // Enforce 2-space indentation
        "no-unused-vars": "error", // Disallow unused variables
        "no-console": "error" // Disallow console.log and similar statements
        // Add more strict rules as per your preferences
    }
}